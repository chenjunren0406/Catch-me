package jc82_yw31.Client.MiniModel;

import java.awt.Component;

/**
 * the interface the minimodel uses to communicate with the miniview
 */
public interface MiniViewAdapter {
	/**
	 * Appends the connection information to view
	 * @param s
	 */
	public void appendInfo(String s);
	/**
	 * Appends the string to the end of the text display on the view
	 * 
	 * @param s The String to append
	 */
	public void append(String s);
	/**
	 * calls back to the miniview and add the user's name to be included in the comboBox
	 * 
	 * @param name
	 */
	public void addUserName(String name);
	/**
	 * calls back to the miniview and add the component to the GUI
	 * @param name
	 * @param newComp
	 */
	public void addComponent(String name, Component newComp);

}
